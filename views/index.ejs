<%- include ('./partials/inithtml.ejs') %>
<body>
  <%- include ('./partials/navbar.ejs') %>

  <div class="container" id="lista-perguntas">
    <hr />
    <h1>Perguntas</h1>
    <hr />
    <a href="/perguntar" class="btn btn-primary"> Realizar Pergunta </a>
    <hr />

    <% perguntas.forEach( pergunta => { %>
    <br />

    <div class="card">
      <div class="card-header">
        <h3><%= pergunta.titulo %></h3>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%= pergunta.id %>">
          <!-- As perguntas seram abertas na pÃ¡gina pergunta/:id -->
          <button class="btn btn-primary">Responder</button>
        </a>
      </div>
    </div>
    <% }); %>
  </div>
</body>
